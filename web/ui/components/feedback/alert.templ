templ Alert(props AlertProps) {
	<div
		class={ getAlertClasses(props) }
		if props.Dismissible {
			x-data={ getAlertAlpineData(props) }
			x-show="show"
			x-transition:enter="transition ease-out duration-300"
			x-transition:enter-start="opacity-0 transform scale-90"
			x-transition:enter-end="opacity-100 transform scale-100"
			x-transition:leave="transition ease-in duration-200"
			x-transition:leave-start="opacity-100"
			x-transition:leave-end="opacity-0"
		} else if props.AlpineData != "" {
			x-data={ props.AlpineData }
		}
		role="alert"
		if props.AriaLabel != "" {
			aria-label={ props.AriaLabel }
		}
	>
		<div class="flex">
			if props.Icon {
				<div class="flex-shrink-0">
					<div class={ getAlertIconClasses(props.Type) }>
						@getAlertIconSVG(props.Type)
					</div>
				</div>
			}
			<div class={ getAlertContentMargin(props.Icon) }>
				if props.Title != "" {
					<h3 class="text-sm font-semibold">{ props.Title }</h3>
				}
				if props.Message != "" {
					<div class={ getAlertMessageMargin(props.Title) }>
						<p class="text-sm">{ props.Message }</p>
					</div>
				}
			</div>
			if props.Dismissible {
				<div class="ml-auto pl-3">
					<button
						type="button"
						@click="show = false"
						class={ "-mx-1.5 -my-1.5 inline-flex rounded-lg p-1.5 focus:ring-2 focus:ring-offset-2 " + getAlertDismissClasses(props.Type) }
						aria-label="Dismiss"
					>
						<span class="sr-only">Dismiss</span>
						<svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"></path>
						</svg>
					</button>
				</div>
			}
		</div>
	</div>
}

func getAlertAlpineData(props AlertProps) string {
	if props.AlpineData != "" {
		return props.AlpineData
	}
	return "{show: true}"
}

func getAlertContentMargin(hasIcon bool) string {
	if hasIcon {
		return "ml-3 flex-1"
	}
	return "flex-1"
}

func getAlertMessageMargin(hasTitle bool) string {
	if hasTitle != "" {
		return "mt-2"
	}
	return ""
}

func getAlertDismissClasses(alertType string) string {
	switch alertType {
	case "success":
		return "text-green-600 hover:bg-green-100 focus:ring-green-600"
	case "error":
		return "text-red-600 hover:bg-red-100 focus:ring-red-600"
	case "warning":
		return "text-amber-600 hover:bg-amber-100 focus:ring-amber-600"
	case "info":
		return "text-blue-600 hover:bg-blue-100 focus:ring-blue-600"
	default:
		return "text-blue-600 hover:bg-blue-100 focus:ring-blue-600"
	}
}

// AlertWithContent allows custom content instead of title/message
templ AlertWithContent(props AlertProps, content templ.Component) {
	<div
		class={ getAlertClasses(props) }
		if props.Dismissible {
			x-data={ getAlertAlpineData(props) }
			x-show="show"
			x-transition:enter="transition ease-out duration-300"
			x-transition:enter-start="opacity-0 transform scale-90"
			x-transition:enter-end="opacity-100 transform scale-100"
			x-transition:leave="transition ease-in duration-200"
			x-transition:leave-start="opacity-100"
			x-transition:leave-end="opacity-0"
		} else if props.AlpineData != "" {
			x-data={ props.AlpineData }
		}
		role="alert"
		if props.AriaLabel != "" {
			aria-label={ props.AriaLabel }
		}
	>
		<div class="flex">
			if props.Icon {
				<div class="flex-shrink-0">
					<div class={ getAlertIconClasses(props.Type) }>
						@getAlertIconSVG(props.Type)
					</div>
				</div>
			}
			<div class={ getAlertContentMargin(props.Icon) }>
				@content
			</div>
			if props.Dismissible {
				<div class="ml-auto pl-3">
					<button
						type="button"
						@click="show = false"
						class={ "-mx-1.5 -my-1.5 inline-flex rounded-lg p-1.5 focus:ring-2 focus:ring-offset-2 " + getAlertDismissClasses(props.Type) }
						aria-label="Dismiss"
					>
						<span class="sr-only">Dismiss</span>
						<svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"></path>
						</svg>
					</button>
				</div>
			}
		</div>
	</div>
}

package feedback

type AlertProps struct {
	Type        string // success, error, warning, info
	Title       string
	Message     string
	Dismissible bool
	Class       string
	Icon        bool // show icon
	AlpineData  string
	AriaLabel   string
}

func getAlertClasses(props AlertProps) string {
	baseClasses := "rounded-lg border p-4"

	// Variant classes
	var variantClasses string
	switch props.Type {
	case "success":
		variantClasses = "bg-green-50 border-green-200 text-green-800"
	case "error":
		variantClasses = "bg-red-50 border-red-200 text-red-800"
	case "warning":
		variantClasses = "bg-amber-50 border-amber-200 text-amber-800"
	case "info":
		variantClasses = "bg-blue-50 border-blue-200 text-blue-800"
	default: // info
		variantClasses = "bg-blue-50 border-blue-200 text-blue-800"
	}

	classes := baseClasses + " " + variantClasses
	if props.Class != "" {
		classes += " " + props.Class
	}
	return classes
}

func getAlertIconClasses(alertType string) string {
	switch alertType {
	case "success":
		return "text-green-600"
	case "error":
		return "text-red-600"
	case "warning":
		return "text-amber-600"
	case "info":
		return "text-blue-600"
	default:
		return "text-blue-600"
	}
}

func getAlertIconSVG(alertType string) templ.Component {
	switch alertType {
	case "success":
		return alertSuccessIcon()
	case "error":
		return alertErrorIcon()
	case "warning":
		return alertWarningIcon()
	case "info":
		return alertInfoIcon()
	default:
		return alertInfoIcon()
	}
}


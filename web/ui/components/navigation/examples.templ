// ExampleTabsHTMXUsage shows tabs with HTMX for dynamic content loading
templ ExampleTabsHTMXUsage() {
	<div class="container mx-auto px-4 py-8">
		<h2 class="text-2xl font-bold mb-4">Dynamic Content Tabs</h2>
		@Tabs(TabsProps{
			DefaultTab:    "dashboard",
			Variant:       "underline",
			Size:          "md",
			UseHTMX:       true,
			HTMXTarget:    "tab-content",
			HTMXIndicator: "loading",
			Tabs: []TabItem{
				{
					ID:    "dashboard",
					Label: "Dashboard",
					Icon:  "üìä",
					Href:  "/api/tabs/dashboard",
				},
				{
					ID:    "analytics",
					Label: "Analytics",
					Icon:  "üìà",
					Href:  "/api/tabs/analytics",
				},
				{
					ID:    "settings",
					Label: "Settings",
					Icon:  "‚öôÔ∏è",
					Href:  "/api/tabs/settings",
				},
			},
		})
	</div>
}


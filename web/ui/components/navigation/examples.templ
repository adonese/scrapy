package navigation

// This file contains example usage of all navigation components
// Use these as reference when implementing navigation in your application

// ExampleNavbarUsage shows how to use the complete navbar component
templ ExampleNavbarUsage() {
	@NavbarComplete(NavbarCompleteProps{
		LogoText:    "My Application",
		Subtitle:    "Built with Templ",
		ShowStatus:  true,
		StatusText:  "Live",
		StatusColor: "green",
		NavLinks: []NavLink{
			{Href: "/", Text: "Home", Label: "Navigate to home page"},
			{Href: "/about", Text: "About", Label: "Navigate to about page"},
			{Href: "/products", Text: "Products", Label: "Navigate to products page"},
			{Href: "/contact", Text: "Contact", Label: "Navigate to contact page"},
		},
	})
}

// ExampleBreadcrumbUsage shows how to use the breadcrumb component
templ ExampleBreadcrumbUsage() {
	<div class="container mx-auto px-4 py-4">
		@Breadcrumb(BreadcrumbProps{
			Items: []BreadcrumbItem{
				{Text: "Products", Href: "/products"},
				{Text: "Electronics", Href: "/products/electronics"},
				{Text: "Laptops", Href: "/products/electronics/laptops"},
				{Text: "MacBook Pro", Href: ""}, // Last item (current page) doesn't need href
			},
		})
	</div>
}

// ExampleBreadcrumbCompactUsage shows the compact breadcrumb for mobile
templ ExampleBreadcrumbCompactUsage() {
	<div class="container mx-auto px-4 py-4">
		<!-- Show compact version on mobile, full on desktop -->
		<div class="md:hidden">
			@BreadcrumbCompact(BreadcrumbProps{
				Items: []BreadcrumbItem{
					{Text: "Products", Href: "/products"},
					{Text: "Electronics", Href: "/products/electronics"},
					{Text: "Laptops", Href: "/products/electronics/laptops"},
					{Text: "MacBook Pro", Href: ""},
				},
			})
		</div>
		<div class="hidden md:block">
			@Breadcrumb(BreadcrumbProps{
				Items: []BreadcrumbItem{
					{Text: "Products", Href: "/products"},
					{Text: "Electronics", Href: "/products/electronics"},
					{Text: "Laptops", Href: "/products/electronics/laptops"},
					{Text: "MacBook Pro", Href: ""},
				},
			})
		</div>
	</div>
}

